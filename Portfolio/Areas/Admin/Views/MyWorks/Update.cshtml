@model MyWorks
@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Head"></label>
        <input asp-for="Head" class="form-control" accept="image/*">
        <span asp-validation-for="Head" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control">
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageId"></label>
        <input asp-for="ImageId" class="form-control">
        <span asp-validation-for="ImageId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ModalName"></label>
        <input asp-for="ModalName" class="form-control">
        <span asp-validation-for="ModalName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortName"></label>
        <input asp-for="ShortName" class="form-control">
        <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CloseName"></label>
        <input asp-for="CloseName" class="form-control">
        <span asp-validation-for="CloseName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div class="row mt ml">
    <div class="col-lg-11">
        <a class="btn btn-success" asp-action="Index">Back</a>
    </div>
</div>

@section scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/16.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Text'))
            .catch(error => {
                console.error(error);
            });
    </script>

}