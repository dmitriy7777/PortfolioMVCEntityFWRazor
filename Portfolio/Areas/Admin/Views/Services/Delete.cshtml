@model Services
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Service</h2>

<div class="container">
    <div class="row">
        <h4>Image</h4>
        <img src="~/img/@Model.Image" width="100px" height="100px" />
        <h3>@Model.Head</h3>
        <h4>@Model.Text</h4>
    </div>
</div>
<div class="row mt">
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
<div class="row mt">
    <a class="btn btn-success" asp-action="Index">Back</a>
</div>